<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Editação de Categoria</h2>
            </div>

            <div class="card-body">
                <form method="POST" action="/admin/categories/update">
                    <input type="text" name="title" placeholder="Defina o título da categoria" class="form-control" value="<%= category.title %> ">
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <br>
                    <button type="submit" class="btn btn-dark">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>
