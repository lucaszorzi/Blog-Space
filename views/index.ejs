        </div>

        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <a href="/<%= article.slug %>" style="text-decoration: none; color: inherit;"><h2><%= article.title %></h2></a>
                </div>
    
                <div class="card-body">

                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col-12">
                <a style="float: right;" href="/articles/page/2">Próxima >></a>
                <br>
            </div>
        </div>
    </div>
</body>
